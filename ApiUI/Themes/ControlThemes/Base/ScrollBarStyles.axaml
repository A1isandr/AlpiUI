<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border
            Padding="10">
            
            <StackPanel Orientation="Horizontal">
                
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    
    
    
    <Style Selector="Thumb">
        <Setter Property="CornerRadius" Value="{StaticResource ScrollBarThumbCornerRadius}"/>
        <Setter Property="Background" Value="{DynamicResource ScrollBarThumbBackgroundBrush}"/>
        
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition
                    Property="Background"
                    Duration="0:0:0.2">
                
                    <BrushTransition.Easing>
                        <QuinticEaseOut/>
                    </BrushTransition.Easing>
                </BrushTransition>
            </Transitions>
        </Setter>
        
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource ScrollBarThumbHoverBackgroundBrush}"/>
        </Style>
        
        <Style Selector="^:pressed">
            <Setter Property="Background" Value="{DynamicResource ScrollBarThumbPressedBackgroundBrush}"/>
        </Style>
    </Style>
    
    
    
    <Style Selector="ScrollBar">
        <Style Selector="^:vertical">
            <Setter Property="Width" Value="{StaticResource ScrollBarWidth}"/>
            
            <Setter Property="Template">
                <ControlTemplate>
                    <Border
                        Width="{TemplateBinding Width}"
                        Background="Transparent"
                        UseLayoutRounding="False">
                        
                        <Grid 
                            RowDefinitions="Auto,*,Auto">

                            <Track 
                                Grid.Row="1"
                                Value="{TemplateBinding Value, Mode=TwoWay}"
                                Minimum="{TemplateBinding Minimum}"
                                Maximum="{TemplateBinding Maximum}"
                                Orientation="{TemplateBinding Orientation}"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                IsDirectionReversed="True">
                                
                                <Track.Transitions>
                                    <Transitions>
                                        <DoubleTransition
                                            Property="Opacity"
                                            Duration="0:0:0.2">
                    
                                            <DoubleTransition.Easing>
                                                <QuinticEaseOut/>
                                            </DoubleTransition.Easing>
                                        </DoubleTransition>
                                    </Transitions>
                                </Track.Transitions>
                                
                                <Track.DecreaseButton>
                                    <RepeatButton x:Name="PART_PageUpButton"
                                                  Background="Transparent"
                                                  Focusable="False"/>
                                </Track.DecreaseButton>
                                
                                <Track.IncreaseButton>
                                    <RepeatButton x:Name="PART_PageDownButton"
                                                  Background="Transparent"
                                                  Focusable="False"/>
                                </Track.IncreaseButton>
                                
                                <Thumb x:Name="Thumb"
                                       Width="{StaticResource ScrollBarThumbWidth}"
                                       HorizontalAlignment="Right">
                                    
                                    <Thumb.Transitions>
                                        <Transitions>
                                            <DoubleTransition
                                                Property="Width"
                                                Duration="0:0:0.2">
                                
                                                <DoubleTransition.Easing>
                                                    <QuinticEaseOut/>
                                                </DoubleTransition.Easing>
                                            </DoubleTransition>
                                        </Transitions>
                                    </Thumb.Transitions>
                                    
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border x:Name="Thumb"
                                                    Width="{TemplateBinding Width}"
                                                    CornerRadius="{TemplateBinding CornerRadius}"
                                                    Background="{TemplateBinding Background}"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                    
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:pointerover">
                                            <Setter Property="Width" Value="{StaticResource ScrollBarWidth}"/>
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="^:horizontal">
            <Setter Property="Height" Value="{StaticResource ScrollBarHeight}"/>
            
            <Setter Property="Template">
                <ControlTemplate>
                    <Border
                        Height="{TemplateBinding Height}"
                        UseLayoutRounding="False"
                        HorizontalAlignment="Stretch">
                        
                        <Grid
                            ColumnDefinitions="Auto, *, Auto">
                            
                            <Track
                                Grid.Column="1"
                                Value="{TemplateBinding Value, Mode=TwoWay}"
                                Minimum="{TemplateBinding Minimum}"
                                Maximum="{TemplateBinding Maximum}"
                                Orientation="{TemplateBinding Orientation}"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                IsDirectionReversed="False">
                                
                                <Track.Transitions>
                                    <Transitions>
                                        <DoubleTransition
                                            Property="Opacity"
                                            Duration="0:0:0.2">
                                            
                                            <DoubleTransition.Easing>
                                                <QuinticEaseOut/>
                                            </DoubleTransition.Easing>
                                        </DoubleTransition>
                                    </Transitions>
                                </Track.Transitions>
                                
                                <Track.DecreaseButton>
                                    <RepeatButton x:Name="PART_PageUpButton"
                                                  Background="Transparent"
                                                  Focusable="False"/>
                                </Track.DecreaseButton>
                                
                                <Track.IncreaseButton>
                                    <RepeatButton x:Name="PART_PageDownButton"
                                                  Background="Transparent"
                                                  Focusable="False"/>
                                </Track.IncreaseButton>
                                
                                <Thumb x:Name="Thumb"
                                       Height="{StaticResource ScrollBarThumbHeight}"
                                       VerticalAlignment="Bottom">
                                    
                                    <Thumb.Transitions>
                                        <Transitions>
                                            <DoubleTransition
                                                Property="Height"
                                                Duration="0:0:0.2">
                                
                                                <DoubleTransition.Easing>
                                                    <QuinticEaseOut/>
                                                </DoubleTransition.Easing>
                                            </DoubleTransition>
                                        </Transitions>
                                    </Thumb.Transitions>
                                    
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border x:Name="Thumb"
                                                    Height="{TemplateBinding Height}"
                                                    CornerRadius="{TemplateBinding CornerRadius}"
                                                    Background="{TemplateBinding Background}"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                    
                                    <Thumb.Styles>
                                        <Style Selector="Thumb:pointerover">
                                            <Setter Property="Height" Value="{StaticResource ScrollBarHeight}"/>
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="^[AllowAutoHide=True] Track">
            <Setter Property="Opacity" Value="0"/>
        </Style>
    </Style>
</Styles>
